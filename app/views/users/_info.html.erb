<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'50x50'  %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user.followings.count, user_followings_path(user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followers.count, user_followers_path(user) %></th>
  </tr>
        <% if user != current_user %>
          <% if current_user.following?(user) %>
          <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:'btn btn-info' %></td>
         <% else%>
          <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: 'btn btn-success' %></td>
         <% end %>
        <% end %>

        <td><% if current_user != user && current_user.following?(user) && user.following?(current_user) %>
          <%= link_to 'chatを始める', chat_path(user.id) %>
        <% end %></td>

</table>

<div class='row'>
  <% if user == current_user %>
   <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
     <i class="fas fa-user-cog"></i>
   <% end %>
  <% else %>
   <div></div>
  <% end %>



</div>